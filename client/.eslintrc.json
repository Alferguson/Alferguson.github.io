{
  "env": {
      "browser": true,
      "commonjs": true,
      "es6": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"   
  ],
  "parser": "babel-eslint",
  "parserOptions": {
     "ecmaVersion": 2017,
      "ecmaFeatures": {
          "experimentalObjectRestSpread": true,
          "jsx": true
      },
      "sourceType": "module"
  },
  "plugins": [
      "react"
  ],
  "rules": {
      "indent": [
          "error",
          2, {
              "SwitchCase": 1
          }
      ],
      "linebreak-style": 0,
      "quotes": [
          "error",
          "double", {
              "allowTemplateLiterals": true
          }
      ],
      "semi": [
          "error",
          "always"
      ],
      "react/prop-types": 0
  },
  "settings": {
      "react": {
          "createClass": "createReactClass",
          "pragma": "React", 
          "version": "16.0"
      },
      "propWrapperFunctions": [ "forbidExtraProps" ]
  }
}